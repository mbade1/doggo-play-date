<h1>Leave a review for<br> <%= @park.name %>!</h1>
<%= form_for ([@park, @comment]) do |f| %>
    <strong><%= f.label :comment, "Your Review" %></strong><br>
    <%= f.text_area :comment %><br><br>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :park_id, value: @park.id%>
    <%= f.submit "Add Review!" %>
<% end %>

