<h1><%= @park.name %></h1>
<h3>Location of Park: <u><%= @park.location %></u><br>
Types of Dogs that are allowed: <u><%= @park.hound %></u><br>
Description of Park: <u><%= @park.description %></u></h3>

<% if @park.playdates.size > 0 %>
  <h3>PLAYDATES FOR THIS PARK:</h3>
  <table>
    <th>Date</th>
    <th>Time</th>
    <th>Playdate Host</th>
    <th>Host's Family Size</th>
  <% @park.playdates.each do |playdate| %>
    <tr>
      <td><%= link_to "#{playdate.date.strftime("%F")}", park_playdate_path(playdate)%></td> 
      <td><%= playdate.time.strftime("%r") %> </td>
      <td><%= playdate.user.username %></td>
      <td><%= playdate.user.family_size %></td>
    </tr>
  <% end %>
  </table>
  <br>
  Don't see a Playdate that works??
  <%= link_to "Add a New Play Date!", new_park_playdate_path(@park) %>
<% else %>
  <h3>No Playdates have been created!</h3>
  <%= link_to "Add a New Play Date!", new_park_playdate_path(@park) %>
<% end %>


<%if @park.comments.size > 0 %>
<br><br>
<h3>Comments about this park:</h3>
<table>
  <th>User</th>
  <th>Date Created</th>
  <th>Comment</th>
  <% @park.comments.each do |comment|%>
    <tr>
      <td><% @users.each do |user| %>
        <% if comment.user_id == user.id%>
          <%= user.username %>
        <% end %>
      <% end %>
      </td>
      <td><%= comment.created_at.strftime("%F %r") %></td>
      <td><%= comment.comment %></td>
    </tr>
  <% end %>
</table>
<% end %>

