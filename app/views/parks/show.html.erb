<h1><%= @park.name %></h1>
<h3>Location of Park: <u><%= @park.location %></u><br>
Types of Dogs that are allowed: <u><%= @park.hound %></u><br>
Description of Park: <u><%= @park.description %></u></h3>

<% if @park.playdates.size > 0 %>
  <h3>PLAYDATES FOR THIS PARK:</h3>
  <table>
    <th>Date</th>
    <th>Time</th>
    <th>Playdate Host</th>
    <th>Host's Family Size</th>
  <% @park.playdates.each do |playdate| %>
    <tr>
      <td><%= link_to "#{playdate.date.strftime("%B %d, %Y")}", park_playdate_path(playdate)%></td> 
      <td><%= playdate.time.strftime("%I:%M %P") %> </td>
      <td><%= playdate.user.username %></td>
      <td><%= playdate.user.family_size %></td>
    </tr>
  <% end %>
  </table>
  <br>
  Don't see a Playdate that works??
  <%= link_to "Add a New Play Date!", new_park_playdate_path(@park) %>
<% else %>
  <h3>No Playdates have been created!</h3>
  <%= link_to "Add a New Play Date!", new_park_playdate_path(@park) %>
<% end %>

<br><br>
<h3>Comments about this park:</h3>
<%if @park.comments.size > 0 %>
<table>
  <th>User</th>
  <th>Date Created</th>
  <th>Comment</th>
  <% @park.comments.each do |comment|%>
    <tr>
      <td><% @users.each do |user| %>
        <% if comment.user_id == user.id%>
          <%= user.username %>
        <% end %>
      <% end %>
      </td>
      <td><%= comment.created_at.strftime("%B %d, %Y %I:%M %P") %></td>
      <td><%= comment.comment %></td>
    </tr>
  <% end %>
</table>
<% end %>







  <div class="comment-container">
  <h4>Leave a comment about the park here</h4>
    <%= form_tag "/parks/:park_id/comments", :id => 'comment-form', :method => :post do %>
    <%= text_field_tag "comment" %>
    <%#= hidden_field_tag :authenticity_token, cookies.authenticate %>
    <%= hidden_field_tag :park_id, @park.id %>
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= submit_tag "Post Comment", :id => "submit-comment"%>
<% end %>
</div>
